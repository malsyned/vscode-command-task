{
  "name": "vscode-command-task",
  "displayName": "Command Tasks",
  "description": "Execute commands built into Visual Studio Code or provided by extensions as Tasks.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/malsyned/vscode-command-task"
  },
  "icon": "res/logo.png",
  "publisher": "malsyned",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "vscode-command",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "The Visual Studio Code command to execute"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the command",
            "default": []
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/vsce": "^3.3.2"
  }
}
